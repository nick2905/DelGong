<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyek.itdel.delgong">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.splashscreen.SplashScreenActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.searchStory.SearchStoryActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".view.detailStory.DetailStoryActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".view.play.PlayingStory"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".view.main.MainActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>